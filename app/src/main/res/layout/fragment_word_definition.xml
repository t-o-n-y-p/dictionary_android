<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="20dp"
    tools:context=".fragment.definition.WordDefinitionFragment">

    <TextView
        style="@style/TextAppearance.WordModalText"
        android:id="@+id/word_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@tools:sample/lorem[0]"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="?attr/dictionaryContentColor"/>

    <TextView
        style="@style/TextAppearance.DefinitionModalText"
        android:id="@+id/definition_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="@tools:sample/lorem[10]"
        app:layout_constraintTop_toBottomOf="@+id/word_text"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="?attr/dictionaryContentColor"/>

    <Button
        style="@style/Button.Modal"
        app:icon="@drawable/person_fill0_wght400_grad0_opsz48"
        android:id="@+id/log_in_to_add_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/log_in_to_propose"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/definition_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:backgroundTint="?attr/dictionaryContentColor"
        app:iconTint="?attr/dictionaryMainColor"/>

    <Button
        style="@style/Button.Modal"
        app:icon="@drawable/add_fill0_wght400_grad0_opsz48"
        android:id="@+id/add_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/propose_another_meaning"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/definition_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:backgroundTint="?attr/dictionaryContentColor"
        app:iconTint="?attr/dictionaryMainColor"/>

</androidx.constraintlayout.widget.ConstraintLayout>