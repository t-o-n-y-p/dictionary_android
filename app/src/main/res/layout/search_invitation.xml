<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.Group
        android:id="@+id/invitation_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="invitation_text"/>

    <TextView
        style="@style/TextAppearance.InvitationMessage"
        android:id="@+id/invitation_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/start_your_search"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textAlignment="center"
        android:textColor="?attr/dictionaryContentColor"/>

</androidx.constraintlayout.widget.ConstraintLayout>